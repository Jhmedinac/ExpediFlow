@model ExpediFlow.Models.Expediente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar Expediente</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdExpediente" />
                                <div class="form-group">
                                    <label asp-for="NumExpediente" class="control-label"></label>
                                    <input asp-for="NumExpediente" class="form-control" />
                                    <span asp-validation-for="NumExpediente" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdTramite" class="control-label"></label>
                                    <select asp-for="IdTramite" class="form-control" asp-items="ViewBag.IdTramite"></select>
                                    <span asp-validation-for="IdTramite" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdSubTramite" class="control-label"></label>
                                    <select asp-for="IdSubTramite" class="form-control" asp-items="ViewBag.IdSubTramite"></select>
                                    <span asp-validation-for="IdSubTramite" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEntidadSolicitante" class="control-label"></label>
                                    <select asp-for="IdEntidadSolicitante" class="form-control" asp-items="ViewBag.IdEntidadSolicitante"></select>
                                    <span asp-validation-for="IdEntidadSolicitante" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEntidadResponsable" class="control-label"></label>
                                    <select asp-for="IdEntidadResponsable" class="form-control" asp-items="ViewBag.IdEntidadResponsable"></select>
                                    <span asp-validation-for="IdEntidadResponsable" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEntidadRepresentante" class="control-label"></label>
                                    <select asp-for="IdEntidadRepresentante" class="form-control" asp-items="ViewBag.IdEntidadRepresentante"></select>
                                    <span asp-validation-for="IdEntidadRepresentante" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaIngreso" class="control-label"></label>
                                    <input asp-for="FechaIngreso" class="form-control" />
                                    <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdDepartamento" class="control-label"></label>
                                    <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento"></select>
                                    <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdMunicipio" class="control-label"></label>
                                    <select asp-for="IdMunicipio" class="form-control" asp-items="ViewBag.IdMunicipio"></select>
                                    <span asp-validation-for="IdMunicipio" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEstadoActual" class="control-label"></label>
                                    <select asp-for="IdEstadoActual" class="form-control" asp-items="ViewBag.IdEstadoActual"></select>
                                    <span asp-validation-for="IdEstadoActual" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaEstadoActual" class="control-label"></label>
                                    <input asp-for="FechaEstadoActual" class="form-control" />
                                    <span asp-validation-for="FechaEstadoActual" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdUsuarioAsignado" class="control-label"></label>
                                    <input asp-for="IdUsuarioAsignado" class="form-control" />
                                    <span asp-validation-for="IdUsuarioAsignado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdResolucion" class="control-label"></label>
                                    <input asp-for="IdResolucion" class="form-control" />
                                    <span asp-validation-for="IdResolucion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdDictamen" class="control-label"></label>
                                    <input asp-for="IdDictamen" class="form-control" />
                                    <span asp-validation-for="IdDictamen" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdArchivo" class="control-label"></label>
                                    <input asp-for="IdArchivo" class="form-control" />
                                    <span asp-validation-for="IdArchivo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Observaciones" class="control-label"></label>
                                    <input asp-for="Observaciones" class="form-control" />
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check form-switch ml-5">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                               
                    
                </div>
            </div>
                <div class="callout callout-info" style="border-left-color: var(--blue);">
                    <h5>Otros</h5>
                    <br />
                    <div class="row">

                        <div class="form-group">
                            <label asp-for="FechaCreacion" class="control-label"></label>
                            <input asp-for="FechaCreacion" class="form-control" readonly />
                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaModificacion" class="control-label"></label>
                            <input asp-for="FechaModificacion" class="form-control" readonly />
                            <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreadoPor" class="control-label"></label>
                            <input asp-for="CreadoPor" class="form-control" readonly />
                            <span asp-validation-for="CreadoPor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ModificadoPor" class="control-label"></label>
                            <input asp-for="ModificadoPor" class="form-control" readonly />
                            <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                        </div>

                    </div>
                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
