@model ExpediFlow.Models.Flujo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar Flujo</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdFlujo" />
                                <div class="form-group">
                                    <label asp-for="NombreFlujo" class="control-label"></label>
                                    <input asp-for="NombreFlujo" class="form-control" />
                                    <span asp-validation-for="NombreFlujo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdSubTramite" class="control-label"></label>
                                    <select asp-for="IdSubTramite" class="form-control" asp-items="ViewBag.IdSubTramite"></select>
                                    <span asp-validation-for="IdSubTramite" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descipcion" class="control-label"></label>
                                    <input asp-for="Descipcion" class="form-control" />
                                    <span asp-validation-for="Descipcion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEstadoInicial" class="control-label"></label>
                                    <select asp-for="IdEstadoInicial" class="form-control" asp-items="ViewBag.IdEstadoInicial"></select>
                                    <span asp-validation-for="IdEstadoInicial" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEstadoFinal" class="control-label"></label>
                                    <select asp-for="IdEstadoFinal" class="form-control" asp-items="ViewBag.IdEstadoFinal"></select>
                                    <span asp-validation-for="IdEstadoFinal" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TiempoMin" class="control-label"></label>
                                    <input asp-for="TiempoMin" class="form-control" />
                                    <span asp-validation-for="TiempoMin" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TiempoMax" class="control-label"></label>
                                    <input asp-for="TiempoMax" class="form-control" />
                                    <span asp-validation-for="TiempoMax" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check form-switch ml-5">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                             
                    
                </div>
            </div>
                <div class="callout callout-info" style="border-left-color: var(--blue);">
                    <h5>Otros</h5>
                    <br />
                    <div class="row">

                        <div class="form-group">
                            <label asp-for="FechaCreacion" class="control-label"></label>
                            <input asp-for="FechaCreacion" class="form-control" readonly />
                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaModificacion" class="control-label"></label>
                            <input asp-for="FechaModificacion" class="form-control" readonly />
                            <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreadoPor" class="control-label"></label>
                            <input asp-for="CreadoPor" class="form-control" readonly />
                            <span asp-validation-for="CreadoPor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ModificadoPor" class="control-label"></label>
                            <input asp-for="ModificadoPor" class="form-control" readonly />
                            <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                        </div>

                    </div>
                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
