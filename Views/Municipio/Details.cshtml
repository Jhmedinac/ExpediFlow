@model ExpediFlow.Models.Municipio

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Detalle de Municipio</h3>
        </div>
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div class="form-group row">
                       </div> 
                        <div class="form-group row">
                                <div class="col-md-2">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Nombre)</label>
                                </div>
                                <div class="col-md-8">
                                    <input  type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Nombre)"/>
                                </div>
                       </div> 
                        <div class="form-group row">
                       </div> 
                        <div class="form-group row">
                       </div> 
                        <div class="form-group row">
                       </div> 
                        <div class="form-group row">
                            <div class="col-md-2">
                                 <label class="control-label">@Html.DisplayNameFor(model => model.IdDepartamentoNavigation)</label>
                             </div>
                             <div class="col-md-8">
                                 <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdDepartamentoNavigation.Nombre)" disabled/>
                             </div>
                       </div> 
                </div>
            </div>
        </div>
         <div class="card-footer">
             <a asp-action="Edit" asp-route-id="@Model.IdMunicipio" type="submit" class="btn btn-primary" style="background-color: var(--blue);">Editar</a>
             <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
          </div>
    </div>
</div>

